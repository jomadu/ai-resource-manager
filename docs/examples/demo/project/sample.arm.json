{
    "registries": {
        "sample-registry": {
            "url": "https://api.cloudsmith.io",
            "type": "cloudsmith",
            "owner": "sample-org",
            "repository": "arm-registry"
        }
    },
    "packages": {
        "rulesets": {
            "sample-registry": {
                "clean-code-ruleset": {
                    "version": "^1.0.0",
                    "priority": 100,
                    "sinks": [
                        "cursor-rules",
                        "amazonq-rules"
                    ]
                }
            }
        },
        "promptsets": {
            "sample-registry": {
                "code-review-promptset": {
                    "version": "^1.0.0",
                    "sinks": [
                        "cursor-commands",
                        "amazonq-prompts"
                    ]
                }
            }
        }
    },
    "sinks": {
        "cursor-rules": {
            "directory": ".cursor/rules",
            "layout": "hierarchical",
            "compileTarget": "cursor"
        },
        "amazonq-rules": {
            "directory": ".amazonq/rules",
            "layout": "hierarchical",
            "compileTarget": "amazonq"
        },
        "cursor-commands": {
            "directory": ".cursor/commands",
            "layout": "hierarchical",
            "compileTarget": "cursor"
        },
        "amazonq-prompts": {
            "directory": ".amazonq/prompts",
            "layout": "hierarchical",
            "compileTarget": "amazonq"
        }
    }
}
