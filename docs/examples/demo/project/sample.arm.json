{
    "version": 1,
    "registries": {
        "sample-registry": {
            "type": "cloudsmith",
            "url": "https://api.cloudsmith.io",
            "owner": "sample-org",
            "repository": "arm-registry"
        }
    },
    "sinks": {
        "cursor-rules": {
            "directory": ".cursor/rules",
            "tool": "cursor"
        },
        "amazonq-rules": {
            "directory": ".amazonq/rules",
            "tool": "amazonq"
        },
        "cursor-commands": {
            "directory": ".cursor/commands",
            "tool": "cursor"
        },
        "amazonq-prompts": {
            "directory": ".amazonq/prompts",
            "tool": "amazonq"
        }
    },
    "dependencies": {
        "sample-registry/clean-code-ruleset": {
            "type": "ruleset",
            "version": "^1.0.0",
            "priority": 100,
            "sinks": [
                "cursor-rules",
                "amazonq-rules"
            ],
            "include": ["**/*.yml"],
            "exclude": ["**/experimental/**"]
        },
        "sample-registry/code-review-promptset": {
            "type": "promptset",
            "version": "^1.0.0",
            "sinks": [
                "cursor-commands",
                "amazonq-prompts"
            ],
            "include": ["review/**/*.yml"]
        }
    }
}
